@{
    ViewBag.Title = "Home Page";
}
<style>
    .carousel-inner
    {
        
        height:100%;
        width:100%;
    }
</style>

    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000" data-pause="hover">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/App/slide1.jpg">
                <div class="carousel-caption">
                    
                        <h1 class="text-dark"><b>Welcome to ApoloCare</b></h1>
                        <p><b>One Of The Top Ranked Hospitals In India</b></p>
                    
                </div>
            </div>

            <div class="item">
                <img src="~/Content/App/slide2.jpg">
                <div class="carousel-caption">
                    
                        <h1 class="text-dark"><b>We are here to help you</b></h1>
                        <p><b>Equipped With The Best Medical Treatment Technolgy</b></p>
                    
                </div>
            </div>

            <div class="item">
                <img src="~/Content/App/slide3.jpg">
                <div class="carousel-caption">
                    
                        <h1 class="text-dark"><b>Health is Wealth.</b></h1>
                        <p><b>We Have Served Million Of Patients</b></p>
                    
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>