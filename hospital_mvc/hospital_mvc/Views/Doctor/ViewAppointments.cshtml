@model IEnumerable<hospital_mvc.Models.Appointment>

@{
    ViewBag.Title = "ViewAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Case-Id : @ViewBag.caseId</h2>

<p>
    <b>Appointments</b>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.appID)
        </th>
        <th>
            Doctor Name
        </th>
        <th>
            Department
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        var color = "#fff";
        
        if (item.status == "Not Conducted")
        {
            color = "lime";
            
        }
        else if (item.status == "Conducted")
        {
            color = "salmon";
            
        }

        <tr style="background-color: @color ">
            <td>
                @Html.DisplayFor(modelItem => item.appID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                <button type="button" class="btn btn-info btn-sm" onclick="@("window.location.href='" + @Url.Action("ViewAppointmentDetails", "Doctor", new { id = item.appID , caseId = ViewBag.caseId }) + "'");">
                    Show Details
                </button>
            </td>
        </tr>
    }

</table>
