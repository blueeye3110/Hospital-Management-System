@model IEnumerable<hospital_mvc.Models.Patient>

@{
    ViewBag.Title = "ShowPatients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ApoloCare</h2>

<p>
 <b>Patients</b>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.patientId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bloodgroup)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.patientId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bloodgroup)
        </td>
        <td>
            <button type="button" class="btn btn-info btn-sm" onclick="@("window.location.href='" + @Url.Action("ShowPatientCase", "Doctor", new { id = item.patientId }) + "'");">
                View Cases
            </button>
        </td>
    </tr>
}

</table>
