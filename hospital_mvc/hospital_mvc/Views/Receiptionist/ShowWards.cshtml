@model IEnumerable<hospital_mvc.Models.Room>

@{
    ViewBag.Title = "ShowWards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ward Status:</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.patientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.charge)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    var color = "#fff";
    var isDisabled = false;
    if (item.status == "Available")
    {
        isDisabled = true ;
        color = "lime";

    }
    else if (item.status == "Occupied")
    {
        isDisabled = false ;
        color = "white";

    }
    <tr style="background-color: @color">
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.patientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.charge)
        </td>
        <td>
            <button type="button" class="btn btn-info btn-sm" onclick="@("window.location.href='" + @Url.Action("ModifyWardStatus", "Receiptionist", new { id = item.roomId }) + "'");" disabled="@isDisabled">
                Make It Available
            </button>
        </td>
    </tr>
}

</table>
