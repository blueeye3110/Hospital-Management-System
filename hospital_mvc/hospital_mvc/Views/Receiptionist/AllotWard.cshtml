@model hospital_mvc.Models.Room

@{
    ViewBag.Title = "AllotWard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Room-Allotment</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label(" Id :", "Patient Id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" class="form-control" name="patientId" value="@ViewBag.patientId" readonly="readonly" />
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Case Id :", "Case Id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" class="form-control" name="caseId" value="@ViewBag.caseId" readonly="readonly" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.roomId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("room_Id", null, htmlAttributes: new { @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.roomId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Allot" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
