@model hospital_mvc.Models.Charge

@{
    ViewBag.Title = "AddCharge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Charge</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label(" Id :", "Patient Id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" class="form-control" name="patientId" value="@ViewBag.patientId" readonly="readonly" />
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Case Id :", "Case Id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" class="form-control" name="caseId" value="@ViewBag.caseId" readonly="readonly" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.chargeID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("charge_Id", null, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.chargeID, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
